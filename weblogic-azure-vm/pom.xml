<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.microsoft.azure.iaas</groupId>
        <artifactId>azure-javaee-iaas-parent</artifactId>
        <version>1.0.19</version>
    </parent>

    <groupId>com.oracle.weblogic.azure</groupId>
    <artifactId>weblogic-azure-vm</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0</version>
    <name>${project.artifactId}</name>
    <url>https://github.com/oracle/weblogic-azure/tree/main/weblogic-azure-vm</url>

    <properties>
        <git.tag>main</git.tag>
        <git.repo>weblogic-azure</git.repo>
        <git.repo.owner>oracle</git.repo.owner>
        <module.basedir>${project.parent.basedir}/arm-oraclelinux-wls</module.basedir>
        <artifactsLocationBase>https://raw.githubusercontent.com/${git.repo.owner}/${git.repo}/${git.tag}/weblogic-azure-vm</artifactsLocationBase>
        <template.validation.tests.directory>${project.parent.basedir}/../../arm-ttk/arm-ttk</template.validation.tests.directory>
        <template.azure-common.properties.url>file:///${module.basedir}/src/main/resources/azure-common.properties</template.azure-common.properties.url>
        <template.pid.properties.url>file:///${module.basedir}/src/main/resources/pid.properties</template.pid.properties.url>
        <template.microsoft.pid.properties.url>file:///${module.basedir}/src/main/resources/microsoft-pid.properties</template.microsoft.pid.properties.url>
    </properties>

    <modules>
        <module>arm-oraclelinux-wls</module>
        <module>arm-oraclelinux-wls-admin</module>
        <module>arm-oraclelinux-wls-cluster</module>
        <module>arm-oraclelinux-wls-dynamic-cluster</module>
    </modules>

</project>
